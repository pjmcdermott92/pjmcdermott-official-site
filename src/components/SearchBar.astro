---
export interface Props {
    label?: string;
    placeholder: string;
    action: string;
    id?: string;
    filedName?: string;
}

const { id, placeholder, label = 'Search', action, filedName = 'query' } = Astro.props;
---

<form id={id || ''} class='flex items-center' action={action}>
    <label for='search' class='sr-only'>{label}</label>
    <div class='relative w-full flex'>
        <input
            type='search'
            id='searchTerm'
            name={filedName}
            class='bg-gray-50/20 border border-gray-500 text-gray-200 text-md rounded-md focus:ring-brand focus:border-brand block w-full px-2 py-0.5'
            placeholder={placeholder}
            required
        />
        <button
            type='submit'
            class='p-3 ms-1 text-sm font-medium text-white bg-brand rounded-lg border border-brand hover:bg-brand/95 focus:ring-4 focus:outline-none focus:ring-brand'>
            <svg class='w-4 h-4' aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'>
                <path
                    stroke='currentColor'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    stroke-width='1'
                    d='m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z'></path>
            </svg>
            <span class='sr-only'>{label}</span>
        </button>
    </div>
</form>

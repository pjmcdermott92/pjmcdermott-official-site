---
import { Image } from 'astro:assets';
import heroImage from '../images/me-home-hero.png';

export interface Props {
    title: string;
    tagline: string;
    description?: string;
    hasImage?: boolean;
}

const { title, tagline, description, hasImage = false } = Astro.props;
---

<div class='flex flex-col md:flex-row items-center gap-12 my-24 lg:p-8'>
    <div class={`flex-1 flex flex-col justify-center text-center md:text-left ${!hasImage ? 'items-center' : ''}`}>
        <h2 class='text-2xl text-brand font-medium'>{title}</h2>
        <h1 class='text-6xl font-bold leading-tight'>{tagline}</h1>
        {description && <p class='opacity-80 text-lg'>{description}</p>}
        <slot />
    </div>
    {hasImage && <Image src={heroImage} alt='Patrick at the computer' class='md:w-1/3' loading='eager' />}
</div>

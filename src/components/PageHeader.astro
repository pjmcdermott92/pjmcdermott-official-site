---
export interface Props {
    heading: string;
    body: string;
    description?: string;
}

const { heading, body, description } = Astro.props;
---

<div class='flex flex-col justify-center items-center gap-12 mt-24 mb-8 lg:p-8'>
    <div class='flex-1 flex flex-col justify-center items-center text-center md:text-left'>
        <h2 class='text-6xl text-brand font-bold text-center mb-4'>{heading}</h2>
        <h1 class='text-3xl font-semi-bold leading-tight mt-2 mb-4'>{body}</h1>
        {description && <p class='opacity-60 text-xl text-center'>{description}</p>}
        <slot />
    </div>
</div>

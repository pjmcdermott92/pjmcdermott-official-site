---
import { Image } from 'astro:assets';
import RootLayout from '../layouts/RootLayout.astro';
import heroImage from '../images/me-home-hero.png';
---

<RootLayout>
    <section class='flex flex-col md:flex-row items-center gap-12 my-24 lg:p-8'>
        <div
            class='flex-1 flex flex-col justify-center text-center md:text-left'
        >
            <h2 class='text-2xl text-brand font-medium'>Hi! I'm Patrick!</h2>
            <h1 class='text-6xl font-bold leading-tight'>
                I build things for the Web!
            </h1>
            <div
                class='flex flex-col md:flex-row items-center justify-center md:justify-start gap-4 mt-8'
            >
                <a
                    href='/blog'
                    class='border border-white px-8 py-2 rounded-md text-white hover:border hover:border-brand hover:text-brand no-underline'
                >
                    Read My Blog
                </a>
                <a
                    href='/portfolio'
                    class='border border-brand px-8 py-2 rounded-md bg-brand hover:bg-transparent text-white hover:border hover:border-white hover:text-white no-underline'
                >
                    See My Work
                </a>
            </div>
        </div>
        <Image
            src={heroImage}
            alt='Patrick at the computer'
            class='md:w-1/3'
            loading='eager'
        />
    </section>
</RootLayout>

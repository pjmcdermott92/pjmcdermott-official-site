---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button, { ButtonVariant } from '../components/Button.astro';
import HeroSection from '../components/HeroSection.astro';
---

<BaseLayout>
    <HeroSection hasImage title="Hi! I'm Patrick!" tagline='I build things for the Web!'>
        <div class='flex flex-col md:flex-row items-center justify-center md:justify-start gap-4 mt-8'>
            <Button isLink={true} href='/blog'>Read My Blog</Button>
            <Button variant={ButtonVariant.SECONDARY} isLink={true} href='/portfolio'>See My Work</Button>
        </div>
    </HeroSection>
</BaseLayout>
